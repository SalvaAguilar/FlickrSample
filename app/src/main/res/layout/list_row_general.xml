<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_row_general"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/row_general_image_dimen"
        android:layout_height="@dimen/row_general_image_dimen"
        android:id="@+id/photo_imageView_generalSearch"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/row_general_horizontal_margin"
        android:layout_marginRight="@dimen/row_general_horizontal_margin"
        android:layout_marginTop="@dimen/row_general_vertical_margin"
        android:layout_marginBottom="@dimen/row_general_vertical_margin"
        android:src="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/search_default"
        android:id="@+id/title_textView_generalSearch"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/photo_imageView_generalSearch"
        android:layout_marginTop="@dimen/row_general_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/user_textView_generalSearch"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/title_textView_generalSearch"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/photo_imageView_generalSearch" />
</RelativeLayout>